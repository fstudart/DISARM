colnames (dat_g_V7_arm_RA)[1] = "Group"

dat_g_V7_arm[!dat_g_V7_arm$Genus %in% List_genus,]$Genus = 'Others'
dat_g_V7_arm_RA[!dat_g_V7_arm_RA$Genus %in% List_genus,]$Genus = 'Others'

#Reordering factors for plots
