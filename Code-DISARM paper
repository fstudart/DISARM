order_genus = factor(genus_graph_V3$Genus, levels = genus_graph_V3$Genus)
dat_g_V3_RA$Genus = as.factor(dat_g_V3_RA$Genus)
dat_g_V3_RA$Genus = factor(dat_g_V3_RA$Genus, levels = order_genus)

