                                                               IQR=IQR(x$Abundance),
                                                               Quantile=quantile(x$Abundance)))

Oxeze_g_V3_median = Oxeze_g_V3_median [,-c(4,6,8)]
colnames (Oxeze_g_V3_median)[4] = "Q1"
colnames (Oxeze_g_V3_median)[5] = "Q3"

