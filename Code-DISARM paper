dat_V3_arm[!dat_V3_arm$Phylum %in% List_phylum,]$Phylum = 'Others'
dat_V3_arm_RA[!dat_V3_arm_RA$Phylum %in% List_phylum,]$Phylum = 'Others'

#Reordering factors for plots
